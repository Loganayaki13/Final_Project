<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	<listeners>
		<listener class-name="utils.Listener"></listener>
	</listeners>
	<test thread-count="5" name="Chrome Test">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="test.TC_001_RegisterTest" />
			<class name="test.TC_002_LoginTest" />
			<class name="test.TC_003_SearchHotelTest" />
			<class name="test.TC_004_SelectHotelTest" />
			<class name="test.TC_005_BookAHotelTest" />
			<class name="test.TC_006_BookConfirmationTest" />
			<class name="test.TC_007_BookedItineraryTest" />
			<class name="test.TC_008_ChangePassword" />
			<class name="test.TC_009_FinalLogout" />
		</classes>
	</test>

	<test thread-count="5" name="Edge Test">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="test.TC_001_RegisterTest" />
			<class name="test.TC_002_LoginTest" />
			<class name="test.TC_003_SearchHotelTest" />
			<class name="test.TC_004_SelectHotelTest" />
			<class name="test.TC_005_BookAHotelTest" />
			<class name="test.TC_006_BookConfirmationTest" />
			<class name="test.TC_007_BookedItineraryTest" />
			<class name="test.TC_008_ChangePassword" />
			<class name="test.TC_009_FinalLogout" />
		</classes>
	</test>

</suite> <!-- Suite -->
